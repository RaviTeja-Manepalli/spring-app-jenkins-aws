pipeline{
 agent any;
 tools{
     maven 'maven'
     jdk 'JDK11'
 }
  stages {
    stage('Maven-Clean'){
      steps{
        bat 'mvn clean'
      }
    }
    stage('Maven-Package'){
        steps{
        bat 'mvn package -DskipTests'
        }
    }
    stage('upload to ec2')
           {
              steps{
          sshagent(['3316db5c-8dd2-4c2d-bf0e-e4ea06d60f2d']){
                   sh 'ssh -o StrictHostKeyChecking=no ubuntu@13.59.106.67 pwd'
                   sh 'scp -r C:/WINDOWS/system32/config/systemprofile/AppData/Local/Jenkins/.jenkins/workspace/challengeaws/artifacts/mindsapp/*.jar ubuntu@13.59.106.67:/home/ubuntu/artifacts'
                     }
              }
           }
  }
  post{
      success{
          rtUpload (
            serverId: 'ARTIFACTORY_SERVER',
            spec: '''{
                 "files": [
                             {
                                "pattern": "target/*.jar",
                                "target": "art-doc-dev-loc/mindsapp/"
                            }
                        ]
            }''',
            )

          rtDownload (
                 serverId: "ARTIFACTORY_SERVER",
                spec:"""{
                     "files": [
                                {
                                    "pattern": "art-doc-dev-loc/mindsapp/**",
                                    "target": "artifacts/"      
                                }
                            ]
              }"""
            )
          //sshagent(['3316db5c-8dd2-4c2d-bf0e-e4ea06d60f2d']){
              //      bat 'scp -r C:/WINDOWS/system32/config/systemprofile/AppData/Local/Jenkins/.jenkins/workspace/challengeaws/artifacts/mindsapp/*.jar ubuntu@13.59.106.67:/home/ubuntu/artifacts/'
       //   }

        /*  withAWS(region:'us-east-2',credentials:'70be04d1-2159-4bd2-bf81-ad29e92c201e') {
                    s3Upload(file:'artifacts/mindsapp/', bucket:'jenkinssujjadbucket', path:'artifacts/')
          }*/

         
      }
      

  }
}
