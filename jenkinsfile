pipeline{
 agent any;
 tools{
     maven 'maven'
     jdk 'JDK11'
 }
  stages {
    stage('Maven-Clean'){
      steps{
        bat 'mvn clean'
      }
    }
    stage('Maven-Package'){
        steps{
        bat 'mvn package'
        }
    }
    
  }
